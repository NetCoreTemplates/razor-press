@page "/{slug}"
@model MyApp.Page
@inject MarkdownPages Markdown

@implements IRenderStatic<MyApp.Page>
@functions {
    public List<Page> GetStaticProps(RenderContext ctx)
    {
        var markdown = ctx.Resolve<MarkdownPages>();
        return markdown.GetVisiblePages().Map(page => new Page { Slug = page.Slug! });
    }
}

@await Html.PartialAsync("DocsPage", new Shared.DocsPage {
   Brand = "ServiceStack Documentation",
   Slug = Model.Slug,
   Folder = "",
   DefaultMenu = new MarkdownMenu {
       Icon = Markdown.DefaultMenuIcon,
       Text = "Home",
       Link = "/",
   },
}.Init(this, Markdown))
